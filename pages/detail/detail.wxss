/* pages/detail/detail.wxss */
.canvas {
    width: 200px;
    height: 250px;
}

.formation-view{
  margin-top: 10px;
  margin-bottom: 15px;
  width: 100%;
  height:206px;
  display: flex;
  justify-content: center; 
}

.formation-text-box{
  padding:0px 20px 15px 20px; 
  display: flex;
  column-count:2;
}

.formation-left{
  width: 45px;
  height: 100%;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10px;
  background: rgb(180, 185, 194);
  font-size:13px;
  font-weight:600;
}

.formation-right{
  padding-left:3px;
  width: 100%;
  height: 100%;
  position: relative;
  font-size:15px;
}

/* 右上角三角标 */

.right_top {
  position: absolute;
  right: 0;
  text-align: right;
  font-size: 28rpx;
  color: white;
  width: 0;
  height: 0;
  /* border-top: 60rpx solid #d0d0d0; */
  border-top: 60rpx solid red;
  border-left:85rpx solid transparent;
}
.r_text{
  position: absolute;
  right: 5rpx;
  top: 5rpx;
  font-size: 24rpx;
  color: white;
  z-index: 2;
  white-space:pre;
}
